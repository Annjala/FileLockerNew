{
  "expo": {
    "name": "Secure Vault",
    "slug": "secure-vault",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "enabled": false
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.securevault.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "We need to use Face ID to secure your files"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.securevault.app",
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {},
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow SecureVault to use Face ID."
        }
      ],
      "expo-secure-store"
    ]
  }
}
